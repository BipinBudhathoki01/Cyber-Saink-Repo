# Target URL for audit
TARGET_URL=https://example.com

# LLM Provider Configuration
# Options: openai, gemini, anthropic
LLM_PROVIDER=gemini

# API Keys (Uncomment and fill the one you use)
# OPENAI_API_KEY=sk-...
# GEMINI_API_KEY=AIza...
# ANTHROPIC_API_KEY=sk-ant-...

# OWASP ZAP Configuration
# If ZAP is running locally
ZAP_BASE_URL=http://127.0.0.1:8080
ZAP_API_KEY=your_zap_api_key_here

# Security Settings
# Set to false to enable ZAP Active Scan (ATTACK MODE) - Use with caution!
SAFE_MODE=true
